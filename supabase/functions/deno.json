{
    "compilerOptions": {
        "allowJs": true,
        "lib": [
            "deno.window"
        ],
        "strict": true
    },
    "lint": {
        "files": {
            "include": [
                "supabase/functions/"
            ]
        }
    },
    "fmt": {
        "files": {
            "include": [
                "supabase/functions/"
            ]
        },
        "options": {
            "useTabs": false,
            "lineWidth": 100,
            "indentWidth": 2,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    },
    "imports": {
        "supabase": "https://esm.sh/@supabase/supabase-js@2"
    }
}